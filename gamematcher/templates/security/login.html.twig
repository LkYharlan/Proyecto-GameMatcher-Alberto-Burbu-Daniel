{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}


	<div class="bg-[#606060] rounded-3xl mx-auto mt-[16vh] h-[55vh] w-[650px]">

		<form class="space-y-3 flex flex-col pt-[4vh] items-center" method="post">
			{% if error %}
				<div id="fontText" class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					{# <a id="fontText" href="{{ path('app_logout') }}">Logout</a> #}
				</div>
			{% endif %}

			<h1 id="fontText" class="h3 mb-3 font-weight-normal text-6xl">LOG IN</h1>

			<div class="bg-white h-[1px] w-[400px] my-4"></div>
			<div class="w-[450px]">
				<label id="fontText" for="inputEmail" class="text-white transition ease-in-out text-primary dark:text-accent font-light mb-1">EMAIL</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="text-black form-control w-full p-3 rounded-[0.4rem] bg-lightBg dark:bg-darkBg text-primary dark:text-darkText border border-lightBg dark:border-secondary focus:outline-none focus:ring-2 focus:ring-secondary dark:focus:ring-accent transition duration-200 ease-in-out" autocomplete="email" required autofocus>

				<label id="fontText" for="inputPassword" class="text-white transition ease-in-out text-primary dark:text-accent font-light mb-1">PASSWORD</label>

				<input type="password" name="password" id="inputPassword" class="form-control w-full p-3 rounded-[0.4rem] bg-lightBg dark:bg-darkBg text-primary dark:text-darkText border border-lightBg dark:border-secondary focus:outline-none focus:ring-2 focus:ring-secondary dark:focus:ring-accent transition duration-200 ease-in-out" autocomplete="current-password" required>

				<div class="flex items-center mt-5">
					<svg width="30" height="30" viewbox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M10 2C8.67392 2 7.40215 2.52678 6.46447 3.46447C5.52678 4.40215 5 5.67392 5 7V9C4.46957 9 3.96086 9.21071 3.58579 9.58579C3.21071 9.96086 3 10.4696 3 11V16C3 16.5304 3.21071 17.0391 3.58579 17.4142C3.96086 17.7893 4.46957 18 5 18H15C15.5304 18 16.0391 17.7893 16.4142 17.4142C16.7893 17.0391 17 16.5304 17 16V11C17 10.4696 16.7893 9.96086 16.4142 9.58579C16.0391 9.21071 15.5304 9 15 9H7V7C6.99975 6.26964 7.26595 5.56428 7.74866 5.01618C8.23138 4.46809 8.89747 4.11491 9.622 4.02289C10.3465 3.93087 11.0798 4.10631 11.6842 4.51633C12.2886 4.92635 12.7227 5.54277 12.905 6.25C12.9713 6.50686 13.1369 6.72686 13.3654 6.86161C13.4786 6.92833 13.6038 6.97211 13.7338 6.99045C13.8639 7.00879 13.9963 7.00133 14.1235 6.9685C14.2507 6.93567 14.3702 6.87811 14.4751 6.79911C14.58 6.7201 14.6684 6.6212 14.7351 6.50806C14.8018 6.39491 14.8456 6.26973 14.8639 6.13966C14.8823 6.00959 14.8748 5.87719 14.842 5.75C14.5645 4.67676 13.9384 3.7261 13.062 3.04734C12.1856 2.36857 11.1085 2.00017 10 2Z" fill="white"/>
					</svg>
					<p id="footerText" class="text-[14px] text-white p-[8px]">Recordar usuario</p>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button id="fontText" class="btn btn-lg btn-primary mt-5 bg-blue-600 w-full h-[50px] border border-blue-700 rounded-[0.4rem] text-white" type="submit">
					LOG IN
				</button>
			</div>
			<p id="footerText">Create account. Sign Up</p>
		</div>
	</form>

</div>{% endblock %}
