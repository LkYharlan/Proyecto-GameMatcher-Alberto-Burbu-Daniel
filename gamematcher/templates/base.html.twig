<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Jaro:opsz@6..72&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Inclusive+Sans:ital@0;1&display=swap" rel="stylesheet">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{{ importmap() }}
		{% endblock %}
	</head>
	<body class="bgcolor">
		{% block header %}
			<header id="headerColor" class="h-20 w-full flex items-center justify-between">
				<a href="{{path('landing')}}">
					<h1 id="fontText" class="mx-8 text-4xl">GAMEMATCHER</h1>
				</a>
				{% if not app.user %}
					<div class="flex text-xl mx-8 space-x-6 ">
						<div>
							<a id="fontText" href="{{path('app_login')}}">
								<button>LOG IN</button>
							</a>
						</div>
						<div class="bg-blue-600 px-4 rounded-2xl">
							<a id="fontText" href="{{path('app_register')}}">
								<button>SIGN UP</button>
							</a>
						</div>

				{% else %}
					<div class="flex text-xl ml-8 space-x-6 ">
						<div class="flex ml-8 space-x-[5vw] items-center content-center">
							<div>
								<a id="searchGames" class="text-blue-600 text-3xl " href="{{path('searchgames')}}">
									<button>SEARCH GAMES</button>
								</a>
							</div>

							<div>
								<a id="secondaryText" class="text-2xl" href="{{path('about')}}">
									<button>ABOUT US</button>
								</a>
							</div>

							<div>
								<a id="secondaryText" class="text-2xl" href="{{path('contact')}}">
									<button>CONTACT</button>
								</a>
							</div>

							<div>
								<a id="secondaryText" class="text-2xl" href="{{path('faq')}}">
									<button>FAQ</button>
								</a>
							</div>
							<div class="flex">
								<a id="secondaryText" class="text-2xl" href="{{path('app_user_show', {'id': app.user.id})}}">
									<div class="flex space-x-3 items-center">
										<div id="secondaryText" class="flex space-x-3 items-center">
											<p>{{app.user.username}}</p>
											<img src="{{asset(app.user.picture)}}" class="h-[40px] w-[40px] rounded-full border border-[#6C6C6C]" alt="User Picture">
										</div>
										<div class="border-l border-[#6A6A6A] h-20 w-20 flex justify-center items-center mx-2">
											<a href="{{path('app_logout')}}">
												<svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
													<g clip-path="url(#clip0_23_7750)">
														<path d="M16 13.5H10C9.173 13.5 8.5 12.827 8.5 12C8.5 11.173 9.173 10.5 10 10.5H16C16.276 10.5 16.5 10.276 16.5 10V3C16.5 1.622 15.378 0.5 14 0.5H3C1.622 0.5 0.5 1.622 0.5 3V21C0.5 22.378 1.622 23.5 3 23.5H14C15.378 23.5 16.5 22.378 16.5 21V14C16.5 13.724 16.277 13.5 16 13.5ZM23.462 11.809C23.437 11.747 23.4 11.692 23.353 11.646L19.354 7.647C19.159 7.452 18.842 7.452 18.647 7.647C18.452 7.842 18.452 8.159 18.647 8.354L21.793 11.5H10C9.724 11.5 9.5 11.724 9.5 12C9.5 12.276 9.724 12.5 10 12.5H21.793L18.647 15.646C18.452 15.841 18.452 16.158 18.647 16.353C18.744 16.451 18.872 16.5 19 16.5C19.128 16.5 19.256 16.451 19.354 16.354L23.353 12.355C23.4 12.308 23.436 12.252 23.462 12.191C23.513 12.069 23.513 11.931 23.462 11.809Z" fill="white"/>
													</g>
													<defs>
														<clipPath id="clip0_23_7750">
															<rect width="24" height="24" fill="white"/>
														</clipPath>
													</defs>
												</svg>
											</a>
										</div>
									</div>
								</a>
							</div>
						</div>

					{% endif %}
				</div>
			</header>

		{% endblock %}

		{% block body %}{% endblock %}

	</body>
</html>
