<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Jaro:opsz@6..72&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Inclusive+Sans:ital@0;1&display=swap" rel="stylesheet">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{{ importmap() }}
		{% endblock %}
	</head>
	<body class="bgcolor">
		{% block header %}
			<header id="headerColor" class="h-20 w-full flex items-center justify-between">
				<a href="{{path('landing')}}">
					<h1 id="fontText" class="mx-8 text-4xl">GAMEMATCHER</h1>
				</a>
				<div class="flex text-xl ml-8 space-x-6 ">

					{% if not app.user %}
						<div>
							<a id="fontText" href="{{path('app_login')}}">
								<button>LOG IN</button>
							</a>
						</div>
						<div class="bg-blue-600 px-4 rounded-2xl">
							<a id="fontText" href="{{path('app_register')}}">
								<button>SIGN UP</button>
							</a>
						</div>

					{% else %}

						<div class="flex ml-8 space-x-[5vw] items-center content-center">
							<div>
								<a id="searchGames" class="text-blue-600 text-3xl " href="{{path('searchgames')}}">
									<button>SEARCH GAMES</button>
								</a>
							</div>

							<div>
								<a id="secondaryText" class="text-2xl" href="{{path('app_login')}}">
									<button>ABOUT US</button>
								</a>
							</div>

							<div>
								<a id="secondaryText" class="text-2xl" href="{{path('app_login')}}">
									<button>CONTACT</button>
								</a>
							</div>

							<div>
								<a id="secondaryText" class="text-2xl" href="{{path('app_login')}}">
									<button>FAQ</button>
								</a>
							</div>
							<div class="flex">
								<a id="secondaryText" class="text-2xl" href="{{path('app_user_show', {'id': app.user.id})}}">
									<div class="flex space-x-3 items-center">
										<div id="secondaryText" class="flex space-x-3 items-center">
											<p>{{app.user.username}}</p>
										<svg width="40" height="40" viewbox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path fill-rule="evenodd" clip-rule="evenodd" d="M18 10C18 12.1217 17.1571 14.1566 15.6569 15.6569C14.1566 17.1571 12.1217 18 10 18C7.87827 18 5.84344 17.1571 4.34315 15.6569C2.84285 14.1566 2 12.1217 2 10C2 7.87827 2.84285 5.84344 4.34315 4.34315C5.84344 2.84285 7.87827 2 10 2C12.1217 2 14.1566 2.84285 15.6569 4.34315C17.1571 5.84344 18 7.87827 18 10ZM12 7C12 7.53043 11.7893 8.03914 11.4142 8.41421C11.0391 8.78929 10.5304 9 10 9C9.46957 9 8.96086 8.78929 8.58579 8.41421C8.21071 8.03914 8 7.53043 8 7C8 6.46957 8.21071 5.96086 8.58579 5.58579C8.96086 5.21071 9.46957 5 10 5C10.5304 5 11.0391 5.21071 11.4142 5.58579C11.7893 5.96086 12 6.46957 12 7ZM10 11C9.0426 10.9998 8.10528 11.2745 7.29942 11.7914C6.49356 12.3083 5.85304 13.0457 5.454 13.916C6.01668 14.5706 6.71427 15.0958 7.49894 15.4555C8.28362 15.8152 9.13681 16.0009 10 16C10.8632 16.0009 11.7164 15.8152 12.5011 15.4555C13.2857 15.0958 13.9833 14.5706 14.546 13.916C14.147 13.0457 13.5064 12.3083 12.7006 11.7914C11.8947 11.2745 10.9574 10.9998 10 11Z" fill="white"/>
										</svg>
										</div>
										<div class="border-l border-[#6A6A6A] h-20 w-20 flex justify-center items-center mx-2">
											<a href="{{path('app_logout')}}">
												<svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
													<g clip-path="url(#clip0_23_7750)">
														<path d="M16 13.5H10C9.173 13.5 8.5 12.827 8.5 12C8.5 11.173 9.173 10.5 10 10.5H16C16.276 10.5 16.5 10.276 16.5 10V3C16.5 1.622 15.378 0.5 14 0.5H3C1.622 0.5 0.5 1.622 0.5 3V21C0.5 22.378 1.622 23.5 3 23.5H14C15.378 23.5 16.5 22.378 16.5 21V14C16.5 13.724 16.277 13.5 16 13.5ZM23.462 11.809C23.437 11.747 23.4 11.692 23.353 11.646L19.354 7.647C19.159 7.452 18.842 7.452 18.647 7.647C18.452 7.842 18.452 8.159 18.647 8.354L21.793 11.5H10C9.724 11.5 9.5 11.724 9.5 12C9.5 12.276 9.724 12.5 10 12.5H21.793L18.647 15.646C18.452 15.841 18.452 16.158 18.647 16.353C18.744 16.451 18.872 16.5 19 16.5C19.128 16.5 19.256 16.451 19.354 16.354L23.353 12.355C23.4 12.308 23.436 12.252 23.462 12.191C23.513 12.069 23.513 11.931 23.462 11.809Z" fill="white"/>
													</g>
													<defs>
														<clipPath id="clip0_23_7750">
															<rect width="24" height="24" fill="white"/>
														</clipPath>
													</defs>
												</svg>
											</a>
										</div>
									</div>
								</a>
							</div>
						</div>

					{% endif %}
				</div>
			</header>

		{% endblock %}

		{% block body %}{% endblock %}

	</body>
</html>
